<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="25" />

    <LinearLayout
        android:id="@+id/statusPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/batteryLevel"
            android:layout_width="@dimen/status_bar_icon_width"
            android:layout_height="@dimen/status_bar_icon_height"
            android:layout_weight="1"
            app:srcCompat="@drawable/battery_veryhigh" />

        <ImageView
            android:id="@+id/bluetooth"
            android:layout_width="@dimen/status_bar_icon_width"
            android:layout_height="@dimen/status_bar_icon_height"
            android:layout_weight="1"
            app:srcCompat="@drawable/bluetooth_enable" />

        <ImageView
            android:id="@+id/wireless"
            android:layout_width="@dimen/status_bar_icon_width"
            android:layout_height="@dimen/status_bar_icon_height"
            android:layout_weight="1"
            app:srcCompat="@drawable/wireless_disabled" />

        <ImageView
            android:id="@+id/status"
            android:layout_width="@dimen/status_bar_icon_width"
            android:layout_height="@dimen/status_bar_icon_height"
            android:layout_weight="1"
            app:srcCompat="@drawable/led_green" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>